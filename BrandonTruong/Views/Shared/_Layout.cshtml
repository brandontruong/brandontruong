    <body>
        <!-- START TOP SECTION -->
	<div class="container_12">
	
		<!-- START LOGO -->
		<div class="grid_4 header">
			<a href="index.htm"><img src="@Url.Content("~/images/logo.gif")" alt="YIW minimal" /></a>
		</div>
		<!-- END LOGO -->
   	 
		<!-- START NAVIGATION -->
   	  	<div class="grid_8 header">
   	  		<div id="navigation">
				<ul id="nav">
					<li id="home">@Html.ActionLink("Home", "Index", "Home")</li>
					<li id="about">@Html.ActionLink("About", "About", "Home")</li>
					<li id="portfolio">@Html.ActionLink("Portfolio", "Portfolio", "Home")</li>
